<%- include partials/header.ejs %>

<body>
    <%- include partials/homenavbar.ejs %>


    <div class="container">
        
        <br>
        <h2 class="font-weight-bold text-center text-light 
            bg-dark card-header">Artigos sobre a categoria: <%= category %></h2>
        <hr>

        <% articles.forEach(article => { %>
            <br>
            <div class="card text-light bg-dark mb-3">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>

                <div class="card-body">
                    
                    <a href="/<%= article.slug %>" class="btn btn-light font-weight-bold white-button">Ler artigo</a>
                    
                </div>
            </div>
        <% }) %>
    </div>  
</body>

