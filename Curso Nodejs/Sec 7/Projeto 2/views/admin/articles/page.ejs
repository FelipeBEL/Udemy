<%- include ../../partials/header.ejs %>

<body>
    <%- include ../../partials/homenavbar.ejs %>

    <br>

    <div class="container">

        <% result.articles.rows.forEach(article => { %>
            <br>
            <div class="card text-light bg-dark mb-3">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>

                <div class="card-body">
                    
                    <a href="/<%= article.slug %>" class="btn btn-light font-weight-bold white-button">Ler artigo</a>
                    
                </div>
            </div>
        <% }) %>
        
        <br>

        <div class="row">
            <div class="col col-12">
                
                <% if(result.page > 2) { %>
                    <a class="btn btn-light font-weight-bold white-button" 
                        style="float: left;" href="/articles/page/<%= result.page - 1 %>"><< Página Anterior</a>
                <% } else if(result.page == 2) {%>
                    <a class="btn btn-light font-weight-bold white-button" 
                        style="float: left;" href="/"><< Home</a>
                <% } %>

                <% if(result.next) { %>
                    <a class="btn btn-light font-weight-bold white-button" 
                        style="float: right;" href="/articles/page/<%= result.page + 1 %>">Próxima página >></a>
                <% } %>

            </div>
        </div>
        <br>
        
    </div>  
</body>

<%- include ../../partials/footer.ejs %>