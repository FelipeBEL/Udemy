<%- include ../../partials/header.ejs %>

<body>
    <%- include ../../partials/navbar.ejs %>

    <div class="container">
        <br>
        <hr>
        <h2 class="font-weight-bold text-center text-light 
            bg-dark card-header rounded-pill">Usuários</h2>
        <hr>
        <br>
        <table class="table table-dark table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                </tr>
            </thead>

            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <th scope="row"><%= user.id %></th>
                        <td><%= user.email %></td>
                        <td>


                            
                            <a href="" class="btn btn-light white-button">Editar</a>
                            
                            <form method="POST" action="" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                                <input type="hidden" name="id" value="<%= user.id %>">
                                <button style="margin-left: 2vh;" class="btn btn-light white-button">Deletar</button>
                            </form>

                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <br>
        <a href="/admin/users/create" class="btn btn-dark">Adicionar usuário</a>

    </div>

</body>

<%- include ../../partials/footer.ejs %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Você quer deletar essa categoria?");
        
        if(decision){
            form.submit();
        }
    }
</script>